{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build FreeGLUT (MSVC)",
      "type": "shell",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/I",
        "C:/Users/Codrin/Documents/Downloaded tools/freeglut/include",
        "main.cpp",
        "Frontend/Frontend.cpp",
        "Storage/src/Data.cpp",
        "Storage/src/Values.cpp",
        "/link",
        "/LIBPATH:C:/Users/Codrin/Documents/Downloaded tools/freeglut/lib",
        "freeglut.lib",
        "opengl32.lib",
        "/OUT:${workspaceFolder}/main.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": false },
      "detail": "Build task for MSVC + FreeGLUT including Frontend.cpp"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$msCompile"],
      "group": { "kind": "build", "isDefault": true },
      "detail": "Task generated by Debugger."
    }
  ]
}
